<% if obj.errors.any? %>
<div class="container">
    <div class="row">
        <div class="col s12 m12" >
            <div class="card-panel red lighten-2">
                <span class="white-text">
                    <strong> <%= pluralize(obj.errors.count, "error")%></strong>
                        <% obj.errors.full_messages.each do |msg| %>
                          <ul>
                            <li><%= msg %></li>
                          </ul>
                        <% end %>
                </span>
            </div>
        </div>
    </div>
</div>
<% end %>