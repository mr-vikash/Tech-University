<% @courses.each do |course| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= course.short_name %></span>
          <p><%= course.name %></p>
        </div>
        <div class="card-action">
          <% if current_user && !current_user.courses.include?(course) %>
            <%= link_to "Enroll", courses_enroll_path(course_id: course.id), data: {
              turbo_method: :post
            }  %>
          <% end %>
          <%= link_to "View Course", course_path(course) %>
          <% if logged_in? %>
            <%= link_to "Edit Course", edit_course_path(course) %>
          <%end%>
        </div>
      </div>
    </div>
<% end %>